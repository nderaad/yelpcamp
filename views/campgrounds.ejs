<% include partials/header %>

<div class="container">
    <header class="jumbotron">
      <div class="conatiner">
        <h1>Welcome to YelpCamp!</h1>
        <p>View our handpicked campgrounds from all over the world</p>
        <p>
          <a class="btn btn-primary btn-large" href="/campgrounds/new">Add a New Campground</a>
        </p>
      </div>
    </header>
      <!--style="display:flex; flex-wrap:wrap help center and size all images-->
      <div class="row text-center" style="display:flex; flex-wrap:wrap;">
        <% campgrounds.forEach(function(camp){ %>
          <div class="col-md-3 col-sm-6">
            <div class="thumbnail">
              <img src="<%= camp.image %>">
              <div class="camption">
                <h4> <%= camp.name %> </h4>
              </div>
              <p>
                <!-- This renders id specific pages -->
                <a href="/campgrounds/<%= camp._id %>" class="btn btn-primary">More Info</a>
              </p>
            </div>
          </div>
        <% }) %>
      </div>
</div>
<% include partials/footer %>

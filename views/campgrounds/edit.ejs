<% include ../partials/header %>

<div class="container">
  <div class="row">
    <h1 style="text-align: center">Edit <%= campground.name %></h1>
    <div style="width:60%; margin: 25px auto;">
      <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
        <div class="form-group">
          <label>Title</label>
          <input class="form-control" type="text" name="editedCampground[name]" value="<%= campground.name %>">
        </div>
        <div class="form-group">
          <label>Image</label>
          <input class="form-control" type="text" name="editedCampground[image]" value="<%= campground.image %>">
        </div>
        <div class="form-group">
          <label>Description</label>
          <textarea class="form-control" rows="8" name="editedCampground[description]"><%= campground.description %></textarea>
        </div>
        <div class="form-group">
          <button class="btn btn-lrg btn-primary btn-block">Submit</button>
        </div>
      </form>
      <a href="/campgrounds/<%= campground._id %>">Back</a>
    </div>
  </div>
</div>

<% include ../partials/footer %>
